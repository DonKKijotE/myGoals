{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="login-page">
  <div class="form">

    <form class="login-form" method="post">
      {% if error %}
          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}<br><br></div>
      {% endif %}

      {% if app.user %}
          <div class="mb-3">
              Estás identificado como {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Logout</a><br><br>
          </div>
      {% endif %}
      <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="username"/>
      <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required  placeholder="password"/>
      <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
      <button class="btn btn-lg btn-primary" type="submit">login</button>
      <p class="message">¿No tienes cuenta? <a href="#">Regístrate</a></p>
    </form>
  </div>
</div>









